<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="com.cloud.newsprovider.dao.ShoppingDao">
    <insert id="intcart" parameterType="com.cloud.common.Cart">
                INSERT INTO cart ( goodsname,number, price,goodid,uid)VALUES(#{goodsname}, #{number}, #{price},#{goodid},#{uid});
            </insert>
    <update id="updateCart" parameterType="int">
                UPDATE cart SET number = number+#{number} WHERE id = #{id} ;
            </update>
    <select id="getAllcart" resultType="com.cloud.common.Cart" parameterType="java.lang.Integer">
        select * from cart WHERE uid = #{uid}
    </select>
</mapper>
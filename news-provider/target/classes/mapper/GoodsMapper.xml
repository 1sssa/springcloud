<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="com.cloud.newsprovider.dao.GoodsDao">
    <select id="getAllgoods" resultType="com.cloud.common.Goods">
       select * from goods
    </select>
    <select id="getOnegoods" resultType="com.cloud.common.Goods" parameterType="java.lang.String">
        SELECT * FROM goods WHERE gname LIKE "%${gname}%"
    </select>
     <select id="getOnegid" resultType="com.cloud.common.Goods" parameterType="int">
         select * from goods where gid=#{gid}
     </select>
</mapper>
<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
        "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="com.cloud.userprovider.dao.UserDao">

    <select id="login" resultType="com.cloud.common.User" parameterType="java.lang.String">
        select * from user where uname=#{uname}
    </select>

    <insert id="register" parameterType="java.lang.String">
        INSERT INTO USER(uname,upassword,utype,uemail) VALUES (#{uname},#{upassword},#{utype},#{uemail})
    </insert>

    <!--    增加,  注意：要指定增加的列名-->
    <insert id="addUser" parameterType="com.cloud.common.User">
       INSERT INTO USER(uaccount,uname,upassword,utype,uemail) VALUES (#{uaccount},#{uname},#{upassword},#{utype},#{uemail})
    </insert>


    <!--查询根据ID查询用户信息-->
    <select id="findUser" resultType="com.cloud.common.User" parameterType="java.lang.String" >
       select * from user where uaccount=#{uaccount}
    </select>

    <!--删除-->
    <delete id="deleteUser" parameterType="java.lang.String">
        delete from USER where uaccount = #{uaccount}
    </delete>

    <!--更新-->
    <update id="updateUser" parameterType="com.cloud.common.User">
       update user set upassword=#{upassword},uname=#{uname},uemail=#{uemail},utype=#{utype} where uaccount=#{uaccount}
    </update>


</mapper>
